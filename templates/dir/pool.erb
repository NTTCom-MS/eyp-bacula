<% if defined?(@description) -%>
#
# <%= @description %>
#
<% end -%>

Pool {
  Name = <%= @pool_name %>
  Pool Type = <%= @pool_type %>
  <%- if defined?(@recycle) -%>
  Recycle = <%= @recycle %>
  <%- end -%>
  <%- if defined?(@autoprune) -%>
  AutoPrune = <%= @autoprune %>
  <%- end -%>
  <%- if defined?(@volume_retention) -%>
  Volume Retention = <%= @volume_retention %>
  <%- end -%>
  <%- if defined?(@file_retention) -%>
  File Retention = <%= @file_retention %>
  <%- end -%>
  <%- if defined?(@job_retention) -%>
  Job Retention = <%= @job_retention %>
  <%- end -%>
  <%- if defined?(@maximum_volume_size) -%>
  Maximum Volume Bytes = <%= @maximum_volume_size %>
  <%- end -%>
  <%- if defined?(@maximum_volumes) -%>
  Maximum Volumes = <%= @maximum_volumes %>
  <%- end -%>
  <%- if defined?(@label_format) -%>
  Label Format = "<%= @label_format %>"
  <%- end -%>
  <%- if defined?(@action_on_purge) -%>
  Action On Purge = <%= @action_on_purge %>
  <%- end -%>
  <%- if defined?(@volume_use_duration) -%>
  Volume Use Duration = <%= @volume_use_duration %>
  <%- end -%>
}
