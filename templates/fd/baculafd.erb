#
# puppet managed file
#

#
# "Global" File daemon configuration specifications
#
FileDaemon {
  Name = <%= @fdname %>
  FDport = <%= @port %>
  WorkingDirectory = <%= scope.lookupvar('bacula::params::fd_workdir') %>
  Pid Directory = <%= scope.lookupvar('bacula::params::fd_pid') %>
  Maximum Concurrent Jobs = <%= @max_concurrent_jobs %>
  <%- if defined?(@plugin_dir) -%>
  Plugin Directory = <%= @plugin_dir %>
  <%- end -%>
  <%- if defined?(@fdaddr) -%>
  FDAddress = <%= @fdaddr %>
  <%- end -%>
}
